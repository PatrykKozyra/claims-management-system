# Django Core Settings
SECRET_KEY=your-secret-key-here-generate-with-get-random-secret-key
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (Development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (Production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=claims_db
# DB_USER=claims_user
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# For SQL Server (Production)
# DB_ENGINE=mssql
# DB_NAME=claims_db
# DB_USER=claims_user
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=1433

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=pdf,docx,xlsx,jpg,jpeg,png,txt

# Azure Blob Storage (Optional - for production file storage)
# AZURE_ACCOUNT_NAME=your-storage-account
# AZURE_ACCOUNT_KEY=your-storage-key
# AZURE_CONTAINER=documents

# SharePoint Storage (Optional - for production file storage)
# SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/claims
# SHAREPOINT_DOCUMENT_LIBRARY=Claims Documents
# SHAREPOINT_CLIENT_ID=your-client-id
# SHAREPOINT_CLIENT_SECRET=your-client-secret
# SHAREPOINT_TENANT_ID=your-tenant-id

# Email Configuration
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@claims-system.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Rate Limiting (requires django-ratelimit)
RATELIMIT_ENABLE=True
LOGIN_RATE_LIMIT=5/5m
EXPORT_RATE_LIMIT=10/h

# Session Security
SESSION_COOKIE_AGE=3600  # 1 hour in seconds
SESSION_SAVE_EVERY_REQUEST=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# RADAR Integration
RADAR_API_URL=https://radar-api.example.com
RADAR_API_KEY=your-radar-api-key
RADAR_SYNC_RETRY_ATTEMPTS=3
RADAR_SYNC_RETRY_DELAY=5
